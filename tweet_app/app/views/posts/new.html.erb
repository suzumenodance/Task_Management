<h1>New</h1>
<p>
  <%= form_tag("/posts/create") do %>
    <textarea name="content" id="" cols="30" rows="10">
      <%= @post.content %>
    </textarea>
    <input type="submit" value="投稿">
  <% end %>
</p>
<p>
  <!-- すべてのエラーメッセージを表示 -->
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
</p>
